			<copy dir="${resource.src.dir}" tofile="@{output.dir}"/>
		</sequential>
	</macrodef>

	<macrodef name="src-jar">
		<attribute name="output.dir" default="${package.src.dir}"/>
		<sequential>
		</sequential>
	</macrodef>

</project>